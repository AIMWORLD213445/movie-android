<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.movieapp.MovieDetailFragment">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.epicodus.movieapp.MovieDetailActivity">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="290dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/harry"
        android:scaleType="fitXY"
        android:id="@+id/imageView" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Harry Potter"
        android:id="@+id/titleTextView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:textAlignment="center" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2011"
        android:id="@+id/releaseDateTextView"
        android:layout_below="@+id/titleTextView"
        android:layout_alignLeft="@+id/titleTextView"
        android:layout_alignStart="@+id/titleTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2.5"
        android:id="@+id/ratingTextView"
        android:layout_below="@+id/releaseDateTextView"
        android:layout_alignLeft="@+id/releaseDateTextView"
        android:layout_alignStart="@+id/releaseDateTextView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About a boy and his magical journey"
            android:id="@+id/synopsisTextView"
            android:layout_below="@+id/releaseDateTextView"
            android:layout_marginTop="25dp"
            android:layout_alignLeft="@+id/releaseDateTextView"
            android:layout_alignStart="@+id/releaseDateTextView"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAlignment="center" />

    </RelativeLayout>

</FrameLayout>
